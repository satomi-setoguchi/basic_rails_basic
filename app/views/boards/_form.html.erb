<%= form_with model: @board, class: "new_board" do |form| %>
    <%= render 'shared/error_message', object: form.object  %>
    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :body %>
      <%= form.text_area :body, class: "form-control",rows: "10" %>
    </div>
    <div class="mb-3">
      <%= form.label :board_image %>
      <%= form.file_field :board_image, class: "form-control", accept: 'image/*' %>
      <%= form.hidden_field :board_image_cache %>
    </div>
    <%= form.submit "登録",  class: "btn btn-primary" %>
  <% end %>
</form>