<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
        <%= form_with model: @board, class: "new_board" do |form| %>
          <div class="mb-3">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :body %>
            <%= form.text_area :body, class: "form-control",rows: "10" %>
          </div>
          <%= form.submit "登録",  class: "btn btn-primary" %>
        <% end %>
      </form>
    </div>
  </div>
</div>
